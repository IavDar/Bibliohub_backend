<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-forgein-key-wishlist-book" author="admin">
        <addForeignKeyConstraint baseTableName="wishlist_books"
                                 baseColumnNames="wishlist_id"
                                 constraintName="fk_wihslist_wishlist_to_books"
                                 referencedTableName="wishlist"
                                 referencedColumnNames="id"/>


        <addForeignKeyConstraint baseTableName="wishlist_books"
                                 baseColumnNames="book_id"
                                 constraintName="fk_wihslist_book_to_books"
                                 referencedTableName="books"
                                 referencedColumnNames="id"/>

    </changeSet>
</databaseChangeLog>